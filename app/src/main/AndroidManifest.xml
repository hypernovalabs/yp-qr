<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.tefbanesco">

    <!-- âœ… Permisos necesarios -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <!-- âœ… Actividad principal: solo responde a TRANSACTION y LAUNCHER -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">

            <!-- ðŸ’³ Solo este intent lanza la app -->
            <intent-filter>
                <action android:name="icg.actions.electronicpayment.tefbanesco.TRANSACTION" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <!-- ðŸš€ Lanzador manual -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- âœ… Actividad para mostrar QR -->
        <activity
            android:name=".screens.QrResultActivity"
            android:exported="false"
            android:theme="@style/Theme.Ypqr"
            android:label="QR Result" />

        <!-- âœ… Activities para los intents requeridos por HioPos v3.5 -->

        <!-- Activity para inicializaciÃ³n del mÃ³dulo (INITIALIZE) -->
        <activity
            android:name=".activities.InitializeActivity"
            android:exported="true"
            android:theme="@style/Theme.Ypqr"
            android:label="Initialize">
            <intent-filter>
                <action android:name="icg.actions.electronicpayment.none.INITIALIZE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Activity para pantalla de configuraciÃ³n (SHOW_SETUP_SCREEN) -->
        <activity
            android:name=".activities.ShowSetupActivity"
            android:exported="true"
            android:theme="@style/Theme.Ypqr"
            android:label="Setup">
            <intent-filter>
                <action android:name="icg.actions.electronicpayment.tefbanesco.SHOW_SETUP_SCREEN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Activity para finalizar/liberar recursos (FINALIZE) -->
        <activity
            android:name=".activities.FinalizeActivity"
            android:exported="true"
            android:theme="@style/Theme.Ypqr"
            android:label="Finalize">
            <intent-filter>
                <action android:name="icg.actions.electronicpayment.tefbanesco.FINALIZE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Activity para informar versiÃ³n (GET_VERSION) -->
        <activity
            android:name=".activities.GetVersionActivity"
            android:exported="true"
            android:theme="@style/Theme.Ypqr"
            android:label="Get Version">
            <intent-filter>
                <action android:name="icg.actions.electronicpayment.tefbanesco.GET_VERSION" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Activity para comportamiento del mÃ³dulo (GET_BEHAVIOR) -->
        <activity
            android:name=".activities.GetBehaviorActivity"
            android:exported="true"
            android:theme="@style/Theme.Ypqr"
            android:label="Get Behavior">
            <intent-filter>
                <action android:name="icg.actions.electronicpayment.tefbanesco.GET_BEHAVIOR" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Activity para parÃ¡metros personalizados (GET_CUSTOM_PARAMS) -->
        <activity
            android:name=".activities.GetCustomParamsActivity"
            android:exported="true"
            android:theme="@style/Theme.Ypqr"
            android:label="Get Custom Params">
            <intent-filter>
                <action android:name="icg.actions.electronicpayment.tefbanesco.GET_CUSTOM_PARAMS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>
</manifest>
